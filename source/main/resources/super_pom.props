<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- 
    Package repository configuration
    The system needs to define 2 environment variables:
    1) SCM_LOCAL_REPO_ROOT
    2) SCM_REMOTE_REPO_ROOT
  -->
  <PropertyGroup>
    <XCodePackageLocalRepoURL>$(SCM_LOCAL_REPO_ROOT)\</XCodePackageLocalRepoURL>
    <XCodePackageRemoteRepoURL>$(SCM_REMOTE_REPO_ROOT)</XCodePackageRemoteRepoURL>
  </PropertyGroup>
  
  <ItemGroup>
    <XCodePackageRepository Include="local">
      <URL>$(XCodePackageLocalRepoURL)</URL>
    </XCodePackageRepository>
    <XCodePackageRepository Include="central">
      <URL>$(XCodePackageRemoteRepoURL)</URL>
    </XCodePackageRepository>
  </ItemGroup>

  <PropertyGroup>
    <XCodePackageVersionMajor>1</XCodePackageVersionMajor>
    <XCodePackageVersionMinor>0</XCodePackageVersionMinor>
    <XCodePackageVersionYear>2010</XCodePackageVersionYear>
    <XCodePackageVersionMonth>12</XCodePackageVersionMonth>
    <XCodePackageVersionDay>01</XCodePackageVersionDay>
    <XCodePackageVersionHour>00</XCodePackageVersionHour>
    <XCodePackageVersionMinute>00</XCodePackageVersionMinute>
    <XCodePackageVersionSecond>00</XCodePackageVersionSecond>
  </PropertyGroup>
  <!-- 
    Generate a 'XCodePackageVcsRevision' property containing the changeset ID of the hg repository
    as well as a 'XCodePackageVcsBranch' property that contains the name of the current branch.
  -->
  <PropertyGroup>
    <XCodePackageVcsRevision>ffffffffffff</XCodePackageVcsRevision>
    <XCodePackageVcsBranch>default</XCodePackageVcsBranch>
  </PropertyGroup>
  
  <ItemGroup>
    <DefaultExclude Include="**\.svn\**" />
    <DefaultExclude Include="**\.hg\**" />
    <DefaultExclude Include="**\*.suo" />
    <DefaultExclude Include="**\*.sdf" />
    <DefaultExclude Include="**\*.opensdf" />
    <DefaultExclude Include="**\*.ipch" />
    <DefaultExclude Include="**\*.user" />
    <DefaultExclude Include="**\*.original" />
  </ItemGroup>

  <ItemGroup>
    <DirectoryStructure Include="docs\manuals" />
    <DirectoryStructure Include="docs\references" />
    <DirectoryStructure Include="source\main\$(XCodePackageLanguage)" />
    <DirectoryStructure Include="source\main\include" />
    <DirectoryStructure Include="source\main\resources" />
    <DirectoryStructure Include="source\test\$(XCodePackageLanguage)" />
    <DirectoryStructure Include="source\test\include" />
    <DirectoryStructure Include="source\test\resources" />
    <DirectoryStructure Include="target" />
    <DirectoryStructure Include="tools" />
  </ItemGroup>

  <PropertyGroup>
    <XCodePackageName></XCodePackageName>
    <XCodePackageDir></XCodePackageDir>
    <XCodePackagePlatform>Win32</XCodePackagePlatform>
    <XCodePackageGroup>com.virtuos.tnt</XCodePackageGroup>
    <XCodePackageGroupH>com</XCodePackageGroupH>
    <XCodePackageGroupM>virtuos</XCodePackageGroupM>
    <XCodePackageGroupL>tnt</XCodePackageGroupL>
  </PropertyGroup>

</Project>

